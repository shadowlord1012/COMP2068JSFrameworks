<h1>{{title}}</h1>
<form method="POST">
    <fieldset>
        <div class="form-row">
            <div>
                <label for="projectId">Project ID</label>
                <select name="projectId" id="projectId" disabled>
                        <option>{{deliveryData.projectId}}</option>
                </select>
            </div>
            <div class="col-md-4 mb-3">
                <label for="deliveryId">Delivery ID Number</label>
                <input type="deliveryId" class="form-control" name="deliveryId" 
                    value={{deliveryData.deliveryId}} id="deliveryId" disabled>
            </div>
            <div class="col-md-4 mb-3">
                <label for="expectedDate">Expected Date</label>
                <input type="date" name="expectedDate" id="expectedDate" required>
            </div>
        </div>
        <button class="offset-1 btn btn-primary">Save</button>
        &nbsp;
        <a href="/deliveries" class="btn btn-info">Back</a>
    </fieldset>
</form>