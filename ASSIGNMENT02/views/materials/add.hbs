<h1>{{title}}</h1>
<form method="POST">
    <fieldset>
            <div class="form-row">
                <div class="col-md-4 mb-3">
                    <label for="projectIndicator">Project ID Number</label>
                    <select name="projectIndicator" id="projectIndicator">
                        {{#each projectData}}
                        <option value="{{this.projectId}}">{{this.projectId}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="col-md-4 mb-3">
                    <label for="name">Material Name</label>
                    <input type="text" class="form-control" name="name" id="name" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="basecostperunit">Cost Per Unit</label>
                    <input type="nunmber" name="basecostperunit" id="basecostperunit"  required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="orderedamount">Amount Ordered</label>
                    <input type="number" name="orderedamount" id="orderedamount" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="amountused">Amount Used</label>
                    <input type="number" name="amountused" id="amountused" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="amountship">Amount Shipped</label>
                    <input type="number" name="amountship" id="amountship" required>
                </div>
            </div>
    </fieldset>
    <button class="offset-3 btn btn-primary">Save Changes</button>
</form>