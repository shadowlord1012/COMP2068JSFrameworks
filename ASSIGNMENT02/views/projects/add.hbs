<h1>{{title}}</h1>
<!-- Basic form for adding in a new project Not the materials to the project
 It will set up the very basic project and then set all the information to add in the 
 ofmaterails that are used -->
<form method="POST">
    <fieldset>
            <div class="form-row">
                <div class="col-md-4 mb-3">
                    <label for="projectId">Project ID Number</label>
                    <input type="text" class="form-control" name="projectId" id="projectId" required>
                </div>
                <div class="col-md-4 mb-3">
                    <label for="projectName">Project Name</label>
                    <input type="text" class="form-control" name="projectName" id="projectName" required>
                </div>                
                <div class="col-md-4 mb-3">
                    <label for="projectType">Project Type</label>
                    <input type="text" class="form-control" name="projectType" id="projectType" required>
                </div>                
                <div class="col-md-4 mb-3">
                    <label for="projectOwnerName">Home Owners Name</label>
                    <input type="text" class="form-control" name="projectOwnerName" id="projectOwnerName" required>
                </div>                
                <div class="col-md-4 mb-3">
                    <h3>Address</h3>
                    <label for="street">Street</label>
                    <input type="text" class="form-control" name="street" id="street" required>
                    <label for="city">City</label>
                    <input type="text" class="form-control" name="city" id="city" required>
                    <label for="state">Province or State</label>
                    <input type="text" class="form-control" name="state" id="state" required>
                    <label for="zip">Postal Code</label>
                    <input type="text" class="form-control" name="zip" id="zip" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="startDate">Start Date</label>
                    <input type="date" name="startDate" id="startDate"  required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="estimateDate">Estimate Time Of Finish</label>
                    <input type="date" name="estimateDate" id="estimateDate" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="budget">Budget</label>
                    <input type="number" name="budget" id="budget" required>
                </div>
            </div>
    </fieldset>
    <button class="offset-3 btn btn-primary">Save Changes</button>
    <a href="/projects" class="offset-3 btn btn-info">Back</a>
</form>